<!DOCTYPE html>
<html lang="en">
  <!--Head-->
  <%- include('../partials/head.ejs') %>
  <body>
    <!--Nav-->
    <%- include('../partials/nav.ejs') %>

    <!--Alert-->

    <!--Index Body-->
    <div class="start-log">
    <div class="container">
      <div class="row">
        <%if(user){%>
        <div class="col-md-3 d-flex justify-content-center align-items-center">
       <img src="https://dwpdobr8xeaso.cloudfront.net/wgvs-images/avatars/profile_llama@4x.png" alt="img" width="200px">
        </div>
        <div class="col-md-6 d-flex align-items-center">
        <div class="m-2">
        <h3> <%= `${user.fname} ${user.lname}` %></h3>
        <h5 class="text-muted"> <%= user.email %></h5>
        <h6 class="text-muted"> <%= user.desigination %></h6>
        </div>
        </div>
        <% } %>
        <% if (path==='user'){%>
          <div class="col-md-3 d-flex flex-column">
            <a href="/newblog" class="btn btn-outline-success m-1">New Post</a>
            <a class="btn btn-outline-danger m-1">Update profile</a>
            <a class="btn btn-outline-warning m-1">Delete Account</a>
          </div>

       <% } %>
        <hr style="width: 90%;"></hr>
      </div>
    </div>
  </div>
    <% if (blogs.length > 0) { %>
      <% blogs.forEach((itm)=>{ %>
       
        <div class="container">
          <div class="card my-3 mx-2 shadow">
            <div class="card-body">
              <h5 class="card-title"><%= itm.head %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= itm.subHead %></h6>
              <h6 class="card-subtitle mt-2 mb-2 text-muted"><%=`Author: ${user.fname} ${user.lname}`%></h6>
              <%if (itm.image){ %>
              <div class="d-flex justify-content-center">
              <img src="<%= itm.image %>" alt="img" class="up-image">
              </div>
             <% } %>
              <p class="card-text" >
                <div class="blogWrap">
                  <%= itm.content %>
                </div>
              </p>
              <a href="/<%= path %>/<%= itm._id %>" class="card-link float-right m-2"><%= control%></a>
            </div>
          </div>
        </div>

     <% }) %>
   <% }else{ %>

    <div class="container">
      <div class="card my -3 mx-2">
        <div class="card-body">
          <h5 class="card-title">Nothing to display</h5>
        </div>
      </div>
    </div>
    <% }  %>


    <!--Footer-->
    <%- include('../partials/footer.ejs') %>

    <!--Script-->
    <%- include('../partials/script.ejs') %>
  </body>
</html>
